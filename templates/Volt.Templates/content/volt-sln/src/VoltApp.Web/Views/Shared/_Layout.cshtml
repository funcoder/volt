<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - VoltApp</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <!-- To upgrade from CDN to standalone CLI for production:
         npx tailwindcss init
         npx tailwindcss -i ./wwwroot/css/site.css -o ./wwwroot/css/output.css --watch -->
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        brand: {
                            50: '#fffbeb',
                            100: '#fef3c7',
                            200: '#fde68a',
                            300: '#fcd34d',
                            400: '#fbbf24',
                            500: '#f59e0b',
                            600: '#d97706',
                            700: '#b45309',
                            800: '#92400e',
                            900: '#78350f',
                        },
                    },
                },
            },
        }
    </script>
    <script src="https://unpkg.com/htmx.org@2.0.4" defer></script>
</head>
<body hx-boost="true" class="bg-white text-zinc-900 antialiased">
    <nav class="border-b border-zinc-200 px-4 py-3">
        <div class="mx-auto max-w-4xl">
            <a href="/" class="text-sm font-semibold text-zinc-900 hover:text-brand-600">VoltApp</a>
        </div>
    </nav>
    <main class="mx-auto max-w-4xl px-4 py-6">
        @RenderBody()
    </main>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
